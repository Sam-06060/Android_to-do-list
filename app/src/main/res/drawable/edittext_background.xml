<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E8F5E9" /> <!-- Light green or choose your color -->

    <!-- Rounded corners -->
    <corners android:radius="30dp" />

    <!-- Optional: border -->
    <stroke android:width="1dp" android:color="#A5D6A7" /> <!-- Light border -->

    <!-- Optional: inner padding -->
    <padding android:left="12dp" android:top="8dp"
        android:right="12dp" android:bottom="8dp"/>
</shape>
